{% extends "index.html.twig" %}

{% block title %}Administration{% endblock %}

{% block cssblock %}
    <!-- Bootstrap core CSS -->
    <link href="/Public/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="/Public/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="/Public/css/admin.css">
{% endblock %}

{% block navblock %}
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark static-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">SylvainSaez.fr</a>
            <button class="navbar-toggler " type="button" data-toggle="collapse" data-target="#navbarResponsive"
                    aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Accueil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/blog">Blog</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" href="../../System/Router.php">Portfolio</a>
                    </li>
                    {% if user %}
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/admin">Administration</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/logout">Deconnexion</a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="/login">Connexion</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
{% endblock %}

{% block header %}
{% endblock %}


{% block body %}
    <div class="container">
    <div class="row">
        <div class="col">
            <h1>Administration</h1>
        </div>

    </div>
    <div class="row" id="main">
        <div class="col-lg-3 col-md-3" id="sidebar">
            <br>
            <a href="/admin/listarticle" class="btn btn-dark btn-block">Liste des articles</a>
            <a href="/admin/postarticle" class="btn btn-dark btn-block">Publier un article</a>
            <a href="/admin/validation" class="btn btn-dark btn-block">Validation commentaires</a>
            <a href="postarticle.html" class="btn btn-dark btn-block disabled">Ajouter un projet</a>
            <a href="postarticle.html" class="btn btn-dark btn-block disabled">Modifier un projet</a>
        </div>
        <div class="col-lg-8 col-md-8 m-4" id="dashboard">
            <div class="row">
                <div class="col">
                    <h2>Le Blog en chiffres :</h2>
                </div>
            </div>
            <div class="row text-center justify-content-around p-4">
                <div class="col-3 border border-dark rounded">
                    <h6>Nb users :</h6>
                    <span>{{ nbUsers }}</span>
                </div>
                <div class="col-3 border border-dark rounded">
                    <h6>Nb Posts :</h6>
                    <span>{{ nbPosts }}</span>
                </div>
                <div class="col-3 border border-dark rounded">
                    <h6>Nb Coms :</h6>
                    <span>{{ nbComs }}</span>
                </div>
            </div>
            <div class="col">
                <h2>Derniers articles :</h2>
            </div>
            <table class="table table-striped table-dark">
                <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Titre</th>
                    <th>Auteur</th>
                    <th>Date de publication</th>
                    <th></th>
                    <th>Modifier</th>
                    <th>Supprimer</th>
                </tr>
                </thead>
                {% for post in posts %}
                    <tbody>
                    <tr class="text-center">
                        <th>{{ post.id }}</th>
                        <th>{{ post.title }}</th>
                        <th>{{ post.author }}</th>
                        <th>{{ post.dateCreation|date("d/m/Y") }}</th>
                        <th></th>
                        <th><a href="/admin/modify?postId={{ post.id }}"><i class="far fa-edit"></i></a></i></th>
                        <th><a href="/admin/erase?postId={{ post.id }}"><i class="fas fa-trash-alt"></i></a></i></th>
                    </tr>
                    </tbody>
                {% endfor %}
            </table>
        </div>
    </div>
</div>
{% endblock %}

{% block footer %}
    <footer>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <p class="text-center text-muted">Copyright &copy; Frakdev | 2019</p>
                </div>
            </div>
        </div>
    </footer>
{% endblock %}



