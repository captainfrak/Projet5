<div class="container">
    {% if user %}
        <div class="row justify-content-center m-2">
            <h2>Commenter l'article</h2>
        </div>
        <div class="row justify-content-center">
            <form action="" method="post" name="commentFrom">
                <div class="control-group">
                    <div class="form-group">
                        <label for="">Utilisateur : {{ user.name }}</label>
                        <input type="text" name="userName" value="{{ user.name }}" hidden>
                    </div>
                    <div class="form-group floating-label-form-group controls">
                        <label for="">Votre Commentaire</label>
                        <textarea class="form-control" name="message" placeholder="Votre message" id="comment" cols="20"
                                  rows="5" required></textarea>
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-dark mt-3" id="commentButton">Poster mon commentaire
                        </button>
                    </div>
                </div>
            </form>
        </div>
    {% else %}
        <div class="row justify-content-center">
            <p>Merci de vous enregistrer pour avoir accés a la partie commentaire du site!</p>
        </div>
    {% endif %}
    {% if success %}
        <div class="alert alert-success" role="alert">
            Commentaire posté, en attente de validation
        </div>
    {% endif %}
    {% if comments %}
        {% for comment in comments %}
            <div class="row justify-content-center border border-light p-2 m-4">
                <div class="col-lg-6 sm">
                    <div class="row sm-6">
                        De : {{ comment.user.username }}
                    </div>
                    <div class="row sm-6">
                        Le : {{ comment.postdate|date("d/m/Y") }}
                    </div>
                </div>
                <div class="col-lg-6 sm">
                    <div class="row">
                        " {{ comment.message }} ,,
                    </div>
                </div>
            </div>
        {% endfor %}
    {% else %}
        <div class="row justify-content-center">
            Pas de commentaire pour le moment sur cet article
        </div>
    {% endif %}
</div>

