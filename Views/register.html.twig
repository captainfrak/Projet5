{% extends "index.html.twig" %}

{% block title %}Register{% endblock %}

{% block header %}
<!-- Page Header -->
<header class="masthead" style="background-image: url('/Public/img/bg/register.jpg')">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="page-heading">
                    <h1>Inscription</h1>
                    <span class="subheading">Créez un compte afin de pouvoir commenter les publications!</span>
                </div>
            </div>
        </div>
    </div>
</header>
{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        {% if  submit %}
            <div class="alert alert-success">
                Bravo {{ user.firstName }} !
                Ton profil a bien été enregistré!
            </div>
        {% endif %}
        <div class="col-lg-8 col-md-10 mx-auto">
            <p>Renseignez les champs ci dessous pour créer un compte :</p>
            <form name="login" id="login" action="" method="post">
                <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                        <label>Indentifiant</label>
                        <input name="username" type="text" class="form-control" placeholder="Indentifiant" id="user"
                               required
                               data-validation-required-message="Veuillez entrer votre identifiant.">
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="form-group floating-label-form-group controls">
                        <label>Nom</label>
                        <input name="name" type="text" class="form-control" placeholder="Votre nom" id="name" required
                               data-validation-required-message="Veuillez entrer votre nom.">
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="form-group floating-label-form-group controls">
                        <label>prénom</label>
                        <input name="firstName" type="text" class="form-control" placeholder="Votre prénom" id="prenom"
                               required
                               data-validation-required-message="Veuillez entrer votre prénom.">
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="form-group floating-label-form-group controls">
                        <label>email</label>
                        <input name="email" type="email" class="form-control" placeholder="Email" id="email" required
                               data-validation-required-message="Veuillez entrer votre email.">
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="form-group floating-label-form-group controls">
                        <label>Password</label>
                        <input name="password" type="password" class="form-control" placeholder="Mot de passe"
                               id="password" required
                               data-validation-required-message="Veuillez entrer votre mot de passe.">
                        <p class="help-block text-danger"></p>
                        <input type="text" name="role" value="10" class="d-none">
                    </div>
                </div>
                <br>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary" id="loginButton">créer mon compte</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}