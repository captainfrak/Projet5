<!-- Page Header -->
<header class="masthead" style="background-image: url('/Public/img/bg/register.jpg')">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="page-heading">
                    <h1>Inscription</h1>
                    <span class="subheading">Créez un compte afin de pouvoir commenter les publications!</span>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            <p>Renseignez les champs ci dessous pour créer un compte :</p>
            <form name="login" id="login" novalidate>
                <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                        <label>Indentifiant</label>
                        <input type="text" class="form-control" placeholder="Indentifiant" id="user" required
                               data-validation-required-message="Veuillez entrer votre identifiant.">
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                        <label>Nom</label>
                        <input type="text" class="form-control" placeholder="Votre nom" id="name" required
                               data-validation-required-message="Veuillez entrer votre nom.">
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="form-group floating-label-form-group controls">
                        <label>prénom</label>
                        <input type="text" class="form-control" placeholder="Votre nom" id="prenom" required
                               data-validation-required-message="Veuillez entrer votre prénom.">
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                        <label>Password</label>
                        <input type="password" class="form-control" placeholder="Mot de passe" id="password" required
                               data-validation-required-message="Veuillez entrer votre Email.">
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <br>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary" id="loginButton">créer mon compte</button>
                </div>
            </form>
        </div>
    </div>
